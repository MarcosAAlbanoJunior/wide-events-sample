{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "type": "row",
      "title": "Overview",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "Total Requests",
      "datasource": "Loki",
      "gridPos": { "h": 5, "w": 4, "x": 0, "y": 1 },
      "options": { "colorMode": "background", "graphMode": "area", "textMode": "auto", "reduceOptions": { "calcs": ["sum"] } },
      "fieldConfig": {
        "defaults": { "color": { "mode": "fixed", "fixedColor": "blue" } }
      },
      "targets": [{
        "expr": "sum(count_over_time({app=\"checkout-service\"} | json | message = `wide_event` [$__range]))",
        "refId": "A",
        "instant": true
      }]
    },
    {
      "type": "stat",
      "title": "Success Rate",
      "datasource": "Loki",
      "gridPos": { "h": 5, "w": 4, "x": 4, "y": 1 },
      "options": { "colorMode": "background", "graphMode": "area", "textMode": "auto", "reduceOptions": { "calcs": ["lastNotNull"] } },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 80 },
              { "color": "green", "value": 90 }
            ]
          },
          "unit": "percent",
          "max": 100
        }
      },
      "targets": [{
        "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `success` [$__range])) / sum(count_over_time({app=\"checkout-service\"} | json | message = `wide_event` [$__range])) * 100",
        "refId": "A",
        "instant": true
      }]
    },
    {
      "type": "stat",
      "title": "Total Errors",
      "datasource": "Loki",
      "gridPos": { "h": 5, "w": 4, "x": 8, "y": 1 },
      "options": { "colorMode": "background", "graphMode": "area", "textMode": "auto", "reduceOptions": { "calcs": ["sum"] } },
      "fieldConfig": {
        "defaults": { "color": { "mode": "fixed", "fixedColor": "red" } }
      },
      "targets": [{
        "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `error` [$__range]))",
        "refId": "A",
        "instant": true
      }]
    },
    {
      "type": "stat",
      "title": "Premium User Errors",
      "datasource": "Loki",
      "gridPos": { "h": 5, "w": 4, "x": 12, "y": 1 },
      "options": { "colorMode": "background", "graphMode": "area", "textMode": "auto", "reduceOptions": { "calcs": ["sum"] } },
      "fieldConfig": {
        "defaults": { "color": { "mode": "fixed", "fixedColor": "orange" } }
      },
      "targets": [{
        "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `error` | mdc_user_subscription = `premium` [$__range]))",
        "refId": "A",
        "instant": true
      }]
    },
    {
      "type": "piechart",
      "title": "Errors by Provider",
      "datasource": "Loki",
      "gridPos": { "h": 5, "w": 8, "x": 16, "y": 1 },
      "options": { "legend": { "placement": "right", "displayMode": "table" } },
      "targets": [{
        "expr": "sum by (mdc_payment_provider) (count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `error` | mdc_payment_provider != `` [$__range]))",
        "refId": "A",
        "legendFormat": "{{mdc_payment_provider}}"
      }]
    },
    {
      "type": "row",
      "title": "Trends",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 6 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Checkout Outcomes Over Time",
      "datasource": "Loki",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 7 },
      "fieldConfig": {
        "defaults": { "custom": { "fillOpacity": 20, "spanNulls": true, "lineWidth": 2 } },
        "overrides": [
          { "matcher": { "id": "byName", "options": "Success" }, "properties": [{ "id": "color", "value": { "mode": "fixed", "fixedColor": "green" } }] },
          { "matcher": { "id": "byName", "options": "Error" }, "properties": [{ "id": "color", "value": { "mode": "fixed", "fixedColor": "red" } }] }
        ]
      },
      "targets": [
        { "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `success` [1m]))", "refId": "A", "legendFormat": "Success" },
        { "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `error` [1m]))", "refId": "B", "legendFormat": "Error" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error Rate by Subscription Tier",
      "datasource": "Loki",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 7 },
      "fieldConfig": { "defaults": { "custom": { "fillOpacity": 10, "spanNulls": true, "lineWidth": 2 } } },
      "targets": [
        { "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `error` | mdc_user_subscription = `free` [1m]))", "refId": "A", "legendFormat": "Free" },
        { "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `error` | mdc_user_subscription = `basic` [1m]))", "refId": "B", "legendFormat": "Basic" },
        { "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `error` | mdc_user_subscription = `premium` [1m]))", "refId": "C", "legendFormat": "Premium" },
        { "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `error` | mdc_user_subscription = `enterprise` [1m]))", "refId": "D", "legendFormat": "Enterprise" }
      ]
    },
    {
      "type": "row",
      "title": "Payment Analysis",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 },
      "collapsed": false
    },
    {
      "type": "barchart",
      "title": "Error Codes Distribution",
      "datasource": "Loki",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [{
        "expr": "sum by (mdc_error_code) (count_over_time({app=\"checkout-service\"} | json | mdc_error_code != `` [$__range]))",
        "refId": "A",
        "legendFormat": "{{mdc_error_code}}"
      }]
    },
    {
      "type": "timeseries",
      "title": "Failures by Payment Provider",
      "datasource": "Loki",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "fieldConfig": { "defaults": { "custom": { "fillOpacity": 15, "spanNulls": true, "lineWidth": 2 } } },
      "targets": [
        { "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `error` | mdc_payment_provider = `stripe` [1m]))", "refId": "A", "legendFormat": "Stripe" },
        { "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `error` | mdc_payment_provider = `cielo` [1m]))", "refId": "B", "legendFormat": "Cielo" },
        { "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `error` | mdc_payment_provider = `pagseguro` [1m]))", "refId": "C", "legendFormat": "PagSeguro" },
        { "expr": "sum(count_over_time({app=\"checkout-service\"} | json | mdc_outcome = `error` | mdc_payment_provider = `mercadopago` [1m]))", "refId": "D", "legendFormat": "MercadoPago" }
      ]
    },
    {
      "type": "row",
      "title": "Wide Event Explorer",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 24 },
      "collapsed": false
    },
    {
      "type": "logs",
      "title": "Recent Wide Events (Raw)",
      "datasource": "Loki",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 25 },
      "options": { "showTime": true, "showLabels": true, "wrapLogMessage": true, "prettifyLogMessage": true, "enableLogDetails": true, "sortOrder": "Descending" },
      "targets": [{ "expr": "{app=\"checkout-service\"} | json | message = `wide_event`", "refId": "A" }]
    },
    {
      "type": "table",
      "title": "Failed Checkouts - Wide Event Detail",
      "datasource": "Loki",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 35 },
      "options": { "showHeader": true, "sortBy": [{ "displayName": "Time", "desc": true }] },
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          { "matcher": { "id": "byName", "options": "mdc_error_code" }, "properties": [{ "id": "displayName", "value": "Error Code" }] },
          { "matcher": { "id": "byName", "options": "mdc_user_id" }, "properties": [{ "id": "displayName", "value": "User ID" }] },
          { "matcher": { "id": "byName", "options": "mdc_user_subscription" }, "properties": [{ "id": "displayName", "value": "Plan" }] },
          { "matcher": { "id": "byName", "options": "mdc_payment_provider" }, "properties": [{ "id": "displayName", "value": "Provider" }] },
          { "matcher": { "id": "byName", "options": "mdc_cart_total_cents" }, "properties": [{ "id": "displayName", "value": "Cart (cents)" }] },
          { "matcher": { "id": "byName", "options": "mdc_payment_attempt" }, "properties": [{ "id": "displayName", "value": "Attempt" }] },
          { "matcher": { "id": "byName", "options": "mdc_duration_ms" }, "properties": [{ "id": "displayName", "value": "Duration (ms)" }] }
        ]
      },
      "transformations": [{ "id": "extractFields", "options": { "source": "labels" } }],
      "targets": [{ "expr": "{app=\"checkout-service\"} | json | mdc_outcome = `error`", "refId": "A" }]
    }
  ],
